<?xml version="1.0" encoding="utf-8"?>

<!-- Declaración del archivo principal de configuración de Android -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permiso para utilizar la cámara del dispositivo -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Permiso para leer archivos del almacenamiento externo -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Permiso para escribir en almacenamiento externo en versiones antiguas -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Permiso para conectarse a Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permiso para consultar el estado de la red -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permiso para obtener ubicación precisa -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Permiso para obtener ubicación aproximada -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Indica que la cámara es opcional en el dispositivo -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- Bloque que define la configuración general de la aplicación -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SkyCollectorApp"
        tools:targetApi="31">

        <!-- Metadato que almacena la clave de Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAqFuJEgJghaeTj9v6y1WodAFl149eHk00" />

        <!-- Proveedor que permite compartir archivos de forma segura -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">

            <!-- Archivo XML que define las rutas compartidas -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Actividad inicial que se abre al lanzar la aplicación -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">

            <!-- Filtro que define esta actividad como punto de entrada -->
            <intent-filter>

                <!-- Acción principal de inicio -->
                <action android:name="android.intent.action.MAIN" />

                <!-- Categoría que permite que aparezca en el launcher -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad principal tras iniciar sesión -->
        <activity android:name=".activities.MainActivity" android:exported="false"/>

        <!-- Actividad que muestra detalles de un avión -->
        <activity android:name=".activities.DetalleAvionActivity" android:exported="false"/>

        <!-- Actividad que permite añadir un avión -->
        <activity android:name=".activities.AddAvionActivity" android:exported="false"/>

        <!-- Actividad encargada del chatbot -->
        <activity android:name=".activities.ChatbotActivity" android:exported="false"/>

        <!-- Actividad que gestiona el mapa -->
        <activity android:name=".activities.MapaActivity" android:exported="false"/>

        <!-- Actividad que gestiona el perfil del usuario -->
        <activity android:name=".activities.PerfilActivity" android:exported="false"/>

    </application>

</manifest>
