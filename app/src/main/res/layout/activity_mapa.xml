<?xml version="1.0" encoding="utf-8"?>

<!-- Contenedor principal que permite posicionar vistas de forma relativa -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fragmento que muestra el mapa de Google ocupando toda la pantalla -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Tarjeta inferior que muestra información del vuelo seleccionado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_info_vuelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <!-- Contenedor vertical interno para organizar los textos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Texto que muestra el modelo del avión -->
            <TextView
                android:id="@+id/txt_modelo_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/boeing_737"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Línea divisoria horizontal entre secciones -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#E0E0E0" />

            <!-- Texto que muestra información adicional del vuelo -->
            <TextView
                android:id="@+id/txt_datos_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cargando_datos"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#555555" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
