<?xml version="1.0" encoding="utf-8"?>

<!-- Contenedor principal vertical para la pantalla de perfil -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#0B1021"
    android:gravity="center_horizontal"
    tools:context=".activities.PerfilActivity">

    <!-- Título de la pantalla Perfil -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mi_perfil"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="30dp"/>

    <!-- Tarjeta circular que muestra la imagen de perfil del usuario -->
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="75dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#333333"
        android:layout_marginBottom="16dp">

        <!-- Imagen de perfil grande centrada en la tarjeta -->
        <ImageView
            android:id="@+id/imgPerfilGrande"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_camera" />
    </androidx.cardview.widget.CardView>

    <!-- Botón para cambiar la foto de perfil -->
    <Button
        android:id="@+id/btnCambiarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cambiar_foto"
        android:backgroundTint="#03DAC6"
        android:textColor="#000000"
        android:layout_marginBottom="32dp"/>

    <!-- Contenedor vertical para los datos del perfil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:padding="10dp">

        <!-- Etiqueta para el correo electrónico -->
        <TextView
            android:text="@string/correo_electronico"
            android:textSize="14sp"
            android:textColor="#B0BEC5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Texto fijo que muestra el correo electrónico del usuario -->
        <TextView
            android:id="@+id/txtEmailFijo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cargando"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingVertical="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- Etiqueta para el nombre de usuario -->
        <TextView
            android:text="@string/nombre_de_usuario"
            android:textSize="14sp"
            android:textColor="#03DAC6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Campo de texto editable para modificar el nombre de usuario -->
        <EditText
            android:id="@+id/etNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/escribe_tu_nombre"
            android:textColor="#FFFFFF"
            android:textColorHint="#90A4AE"
            android:inputType="textPersonName"
            android:minHeight="48dp"/>
    </LinearLayout>

    <!-- Botón para guardar los cambios realizados en el perfil -->
    <Button
        android:id="@+id/btnGuardarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/guardar_cambios"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:padding="14dp"
        android:layout_marginTop="40dp"/>

    <!-- Botón para cerrar sesión de la cuenta -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cerrar_sesi_n"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:padding="14dp"
        android:layout_marginTop="16dp"/>

</LinearLayout>
