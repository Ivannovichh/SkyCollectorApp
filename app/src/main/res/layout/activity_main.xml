<?xml version="1.0" encoding="utf-8"?>

<!-- Layout principal basado en ConstraintLayout que ocupa toda la pantalla -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1021"
    tools:context=".activities.MainActivity">

    <!-- Contenedor superior que actúa como cabecera de la pantalla -->
    <LinearLayout
        android:id="@+id/layoutCabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#0B1021"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Texto que muestra el nombre de la aplicación -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/skycollector"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <!-- Botón con icono para eliminar elementos, inicialmente oculto -->
        <ImageButton
            android:id="@+id/btnPapelera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:layout_marginEnd="12dp"
            app:tint="#FF5252" />

        <!-- Texto que muestra el nombre del usuario -->
        <TextView
            android:id="@+id/txtNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usuario"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"/>

        <!-- Tarjeta circular que contiene la imagen de perfil -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPerfil"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#333333">

            <!-- Imagen que representa la foto del perfil del usuario -->
            <ImageView
                android:id="@+id/imgPerfilMini"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_myplaces" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Texto centrado que se muestra cuando la lista está vacía -->
    <TextView
        android:id="@+id/txtVacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_tienes_aviones_n_a_ade_el_primero"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#B0BEC5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Lista que muestra los aviones registrados -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/layoutCabecera"
        app:layout_constraintBottom_toTopOf="@id/barraInferior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#0B1021"/>

    <!-- Contenedor inferior fijo que actúa como barra de navegación -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/barraInferior"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0B1021"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón con icono para abrir el chat -->
        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/stat_notify_chat"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="40dp"
            app:tint="#6200EE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Botón flotante central para añadir un nuevo avión -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAddAvion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="#6200EE"
            app:tint="#FFFFFF"
            app:elevation="6dp"
            app:fabSize="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Botón con icono para abrir el mapa -->
        <ImageButton
            android:id="@+id/btnMap"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_dialog_map"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="40dp"
            app:tint="#6200EE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
